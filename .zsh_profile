# https://unix.stackexchange.com/questions/167582/why-zsh-ends-a-line-with-a-highlighted-percent-symbol
PROMPT_EOL_MARK=''

if [ -f ~/.aliases ]; then
    . ~/.aliases
fi

# remove duplicated entries, technically not needed if sourced in bash_profile
if [ -f ~/.path ]; then
    . ~/.path
fi

typeset -aU path


# ---------------------------------------------------------------------------- #
#                                     tmux                                     #
# ---------------------------------------------------------------------------- #

# automatically attach if exists
if [ -x "$(command -v tmux)" ] && [ "$TMUX" = "" ] && [ "$TERM_PROGRAM" != "vscode" ]; then
    tmux attach -d
    # https://unix.stackexchange.com/a/570015/482117
    tmux resize-window -A
fi

